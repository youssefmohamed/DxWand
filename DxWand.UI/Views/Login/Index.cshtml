@{
    ViewData["Title"] = "Login";
}
@model LoginModel

<div class="container login-page page" style="width:50%;margin:5% auto">
    <form method="post" asp-controller="Login" asp-action="Login">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input class="form-control" type="email" asp-for="Email"/>
            <span class="text-danger" asp-validation-for="Email" ></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" type="password" asp-for="Password"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

</div>

