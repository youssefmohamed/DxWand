@{
	ViewData["Title"] = "Add new user";
}
@model CreateUserModel

<div class="container page">
	<form method="post" asp-controller="User" asp-action="Create">
		<div class="form-group">
			<label class="form-control-label" asp-for="Email">Email</label>
			<input class="form-control" type="email" asp-for="Email" />
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label class="form-control-label" asp-for="Password">Password</label>
			<input class="form-control" type="password" asp-for="Password" />
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>
		<div class="form-group">
			<label class="form-control-label" asp-for="BirthDate">Birth date</label>
			<input class="form-control" type="date" asp-for="BirthDate" />
			<span class="text-danger" asp-validation-for="BirthDate"></span>
		</div>
		<div class="form-group">
			<label class="form-control-label" asp-for="Gender">Gender</label>
			<select class="form-control" asp-for="Gender">
				<option value="0" selected>Male</option>
				<option value="1">Female</option>
				<option value="2">Other</option>
			</select>
			<span class="text-danger" asp-validation-for="Gender"></span>
		</div>
		<button class="btn btn-primary" type="submit">Add</button>
	</form>
</div>